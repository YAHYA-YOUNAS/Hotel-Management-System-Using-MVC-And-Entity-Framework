@model Project__Hotel_Management_System.Models.tbl_bookings

@{
    ViewBag.Title = "Create";
    ViewBag.duration = "Duration";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
    }

<h2><strong>Create New Booking</strong></h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <h4><strong>Duration</strong></h4>
            <div>
                @Html.EditorFor(model => model.duration)
                @Html.ValidationMessageFor(model => model.duration)
            </div>
        </div>

        <div class="form-group">
            <h4><strong>Number Of Guests</strong></h4>
            <div>
                @Html.EditorFor(model => model.num_of_guests)
                @Html.ValidationMessageFor(model => model.num_of_guests)
            </div>
        </div>

        <div class="form-group">
            <h4><strong>Total Price</strong></h4>
            <div>
                @Html.EditorFor(model => model.total_price)
                @Html.ValidationMessageFor(model => model.total_price)
            </div>
        </div>

        <div class="form-group">
            <h4><strong>Paid</strong></h4>
            <div>
                @Html.EditorFor(model => model.is_paid)
                @Html.ValidationMessageFor(model => model.is_paid)
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
