<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Hotel Management System</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/Content/Home_Page/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="~/Content/Home_Page/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/Content/Home_Page/css/responsive.css">
    <!-- fevicon -->
    <link rel="shortcut icon" type="image/jpg" href="~/Content/Home_Page/images/logo.ico" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/Content/Home_Page/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="main-layout">
    <!-- loader  -->
    <div class="loader_bg">
        <div class="loader"><img src="~/Content/Home_Page/images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->
    <!-- end loader -->
    <!-- header -->
    <header>
        <!-- header inner -->
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                        <div class="full">
                            <div class="center-desk">
                                <div class="logo">
                                    <img src="~/Content/Home_Page/images/logo.jpg" width="150" height="150" alt="#" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                        <nav class="navigation navbar navbar-expand-md navbar-dark ">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarsExample04">
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item">
                                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                                    </li>
                                    <li class="nav-item">
                                        @Html.ActionLink("Bookings", "Index", "Bookings", null, new { @class = "nav-link" })
                                    </li>
                                    <li class="nav-item">
                                        @Html.ActionLink("Rooms", "Index", "Rooms", null, new { @class = "nav-link" })
                                    </li>
                                    <li class="nav-item">
                                        @Html.ActionLink("Customers", "Index", "Customers", null, new { @class = "nav-link" })
                                    </li>
                                </ul>

                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- end header inner -->
    <!-- end header -->
    <!-- banner -->
    <section class="banner_main">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-bg">
                        <div class="padding_lert">
                            <h1>HOTEL MANAGEMENT SYSTEM </h1>
                            <span>Provide comfort to people</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </section>
    <!-- end banner -->
    <!-- choose  section -->
    <div class="choose">
        <div class="container">
            @RenderBody()
            <div class="row">
                <div class="col-md-6">
                    <div class="choose_box">
                        <div class="titlepage">
                            <h2><span class="text_norlam">The Perfect</span> <br>Accommodation</h2>
                        </div>
                        <p>There is perfect accomodation here for people. They can choose any type of accomodation acording to their choice. We provide hotel facilities, restaurant, and an Inn.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="img_box">
                                <figure><img src="~/Content/Home_Page/images/img1.jpg" alt="#" /></figure>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="img_box">
                                <figure><img src="~/Content/Home_Page/images/img2.jpg" alt="#" /></figure>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="img_box">
                                <figure><img src="~/Content/Home_Page/images/img3.jpg" alt="#" /></figure>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end choose  section -->
    <!-- our  section -->
    <div class="our">
        <div class="container">
            <div class="row d_flex">
                <div class="col-md-6">
                    <div class="img_box">
                        <figure><img src="~/Content/Home_Page/images/img4.jpg" alt="#" /></figure>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="our_box">
                        <div class="titlepage">
                            <h2><span class="text_norlam">Best </span> <br>Restaurant</h2>
                        </div>
                        <p> Meal we will provide here is source of joy and we assure people had never taken a luxurious meal ever in their life.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end our  section -->

    <footer id="contact">
        <div class="footer">

            <div class="copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <p>&copy; @DateTime.Now.Year - All Right Reserved By Muhammad Yahya Younas</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Javascript files-->
    <script src="~/Content/Home_Page/js/jquery.min.js"></script>
    <script src="~/Content/Home_Page/js/popper.min.js"></script>
    <script src="~/Content/Home_Page/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Home_Page/js/jquery-3.0.0.min.js"></script>
    <script src="~/Content/Home_Page/js/plugin.js"></script>
    <!-- sidebar -->
    <script src="~/Content/Home_Page/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Content/Home_Page/js/custom.js"></script>
    <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
</body>
</html>

